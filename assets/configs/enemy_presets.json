  "behavior_presets": {
    "rush_in_shoot_leave": {
      "name": "冲入-射击-离开",
      "description": "最经典的杂兵模式：从屏幕顶部飞入，停顿射击，然后飞出",
      "phases": [
        {"action": "move_to", "params": {"target": "y=0.3", "duration": 60}},
        {"action": "shoot_burst", "params": {"count": 3, "interval": 20}},
        {"action": "move_to", "params": {"target": "y=-0.2", "duration": 60}}
      ]
    },
    "side_pass_shoot": {
      "name": "横向掠过射击",
      "description": "从侧面横向飞过，边移动边射击",
      "phases": [
        {"action": "move_to", "params": {"target": "x=-x", "duration": 120}},
        {"action": "shoot_continuous", "params": {"interval": 10, "count": 5}}
      ]
    },
    "circle_strafe": {
      "name": "环绕射击",
      "description": "以圆形路径移动并持续射击",
      "phases": [
        {"action": "move_circle", "params": {"radius": 0.3, "duration": 180, "center": [0, 0.3]}},
        {"action": "shoot_continuous", "params": {"interval": 15, "count": 10}}
      ]
    },
    "dive_attack": {
      "name": "俯冲攻击",
      "description": "快速俯冲到屏幕底部，发射密集弹幕",
      "phases": [
        {"action": "wait", "params": {"duration": 30}},
        {"action": "shoot_burst", "params": {"count": 5, "interval": 5}},
        {"action": "move_to", "params": {"target": "y=-0.5", "duration": 30, "speed": 8.0}}
      ]
    },
    "ambush_retreat": {
      "name": "突袭-撤退",
      "description": "快速飞入，发射大量弹幕后迅速撤退",
      "phases": [
        {"action": "move_to", "params": {"target": "y=0.4", "duration": 30}},
        {"action": "shoot_pattern", "params": {"pattern": "circle", "count": 12}},
        {"action": "wait", "params": {"duration": 15}},
        {"action": "shoot_pattern", "params": {"pattern": "circle", "count": 16}},
        {"action": "move_to", "params": {"target": "y=1.2", "duration": 45}}
      ]
    }
  },
